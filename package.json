{
  "name": "mock-hub",
  "version": "0.1.0",
  "description": "Integration Mock Hub - OpenAPI-driven mock server",
  "private": true,
  "type": "module",
  "bin": {
    "mock-hub": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli/index.ts --out-dir dist --format esm --platform node --sourcemap",
    "dev": "tsx src/cli/index.ts run --spec ./openapi.yaml --source ./scenarios --scenario PartnerDown --ui",
    "start": "node dist/cli.js run"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "debug": "^4.3.7",
    "fastify": "^4.26.2",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "js-yaml": "^4.1.0",
    "json-schema-faker": "^0.5.5",
    "openapi-types": "^12.1.3",
    "swagger-parser": "^10.0.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.70",
    "tsup": "^8.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5"
  }
}
